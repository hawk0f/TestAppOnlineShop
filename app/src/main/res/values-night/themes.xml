<resources>

    <style name="Base.Theme.TestAppOnlineShop" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/pink</item>

        <item name="android:spinnerItemStyle">
            @style/Title4
        </item>

        <item name="android:spinnerDropDownItemStyle">
            @style/Title4
        </item>

    </style>

    <style name="ChipStyle" parent="Widget.Material3.Chip.Suggestion">
        <item name="android:textColor">@color/chip_state_text_color</item>
        <item name="font">@font/sf_pro_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="chipBackgroundColor">@color/chip_state_background</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="closeIconTint">@color/white</item>
    </style>

    <style name="LargeTitle">
        <item name="font">@font/sf_pro_display_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Title1">
        <item name="font">@font/sf_pro_display_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Title2" parent="Widget.AppCompat.TextView">
        <item name="font">@font/sf_pro_display_medium</item>
        <item name="android:textSize">14sp</item>
